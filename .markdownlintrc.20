  // See https://github.com/igorshubovych/markdownlint-cli
  // See https://github.com/DavidAnson/markdownlint/blob/main/schema/.markdownlint.jsonc

  // Only warn about duplicate headings when they're in the same section, not
  // across multiple sections.
  "no-duplicate-heading": {
    "siblings_only": true
  },
  // Accept the indentation that mdformat uses.
  "MD030": {
    "ol_multi": 1,
    "ol_single": 1,
    "ul_multi": 1,
    "ul_single": 1
  },
  // Accept long lines.
  "MD013": {
    "line_length": 160,
    // Sometimes long commands or paths can't be split.
    "code_blocks": false
  }
