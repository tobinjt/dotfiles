[user]
  name = John Tobin
  email = johntobin@johntobin.ie
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore
[alias]
  wdiff = diff --color-words
  wshow = show --color-words
  gdiff = difftool --tool tkdiff --no-prompt
  lint-comments = commit -m 'Lint comments.'
  merge-conflicts = commit -m 'Fix merge conflicts.'
  review-comments = commit -m 'Review comments.'
  upstream = commit -a -m 'Upstream changes.'
[push]
	default = current
